!!! 5
%html(lang="en")
  %head
    %meta(charset="UTF-8")

    // Always force latest IE rendering engine or request Chrome Frame
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")

    // Use title if it's in the page YAML frontmatter
    %title= data.page.title || "The Middleman"
    %link{:rel => 'shortcut icon', :type => 'image/x-icon', :href => image_path('favicon.ico')}
    %link{:href => "http://fonts.googleapis.com/css?family=Work+Sans:400,900", :rel => "stylesheet", :type => "text/css"}

    = stylesheet_link_tag 'normalize', 'application'

  %body{class: page_classes}
    / .brow
    %header.header.l-row
      .l-cell
        .logo
          .eyes
          #holder
        %h1 Jordan Wade

    = yield

    %footer.footer.l-row

  - if data.page.scripts
    - data.page.scripts.each do |script|
      = javascript_include_tag  "#{ script }"

  // = javascript_include_tag  'application'
